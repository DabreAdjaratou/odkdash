    function move_list_items(sourceid, destinationid)
    {
      $("#"+sourceid+"  option:selected").appendTo("#"+destinationid);
    }
    
    //this will move all selected items from source list to destination list
    function move_list_items_all(sourceid, destinationid)
    {
      $("#"+sourceid+" option").appendTo("#"+destinationid);
    }
    
    function updateFacilityName()
    {
        var val = []; 
        $('#facilityNameRight option').each(function(i, selected){
            val[i] = $(selected).val(); 
        });
        if(val.length!=0){
          $.post("<?php echo $this->url('spi-v3-form',array('action'=>'approve-status')); ?>",{idList: val},
           function(data) {
            if (data>0) {
                alert("Form status updated successfully");
                $("#facilityNameRight").html("");
                
                var selectArr = []; 
                $('#facilityNameLeft option').each(function() {
                    selectArr.push($(this).val());
                });
                if(selectArr.length==0){
                    $("#pendingFacilityName").hide();
                }
                
                table.draw();
            }
          });
        }
    }
    function downloadPdf(formId){
    window.open('<?php echo $this->url('spi-v3-form',array('action' => 'download-pdf'))?>'+formId);
    return false;
   }
    
